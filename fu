#! /bin/bash

# Check Dependecies
[[ -z $(which yad) ]] && echo "FUUUUUUUUU  yad"
[[ $(echo $SHELL) == "/bin/bash" ]] || echo "FUUUUUUU  bash"
[[ -z $(which notify-send) ]] && echo "FUUUUUUUUU  notify-send"
[[ -z $(which gtkdialog) ]] && echo "FUUUUUUUUU  gtkdialog"
[[ -z $(which curl) ]] && echo "FUUUUUUUUU  curl"
[[ -z $(which xdg-open) ]] && echo "FUUUUUUUUU  xdg-open"
[[ -z $(which awk) ]] && echo "FUUUUUUUUU  awk"



# Menu in tray icon
echo "-----------------------------"
yad  --title="Test_window" --notification  --listen \
--menu="Check News!data/check_news
Manager!data/manager
Exit !data/kill_yd "Test_window"" \
--separator="\\n" \
 --command='echo Where are the river without water? -On the maps.' --image=data/icons/cool-smilies.png  --button="gtk-close:1"
echo "-----------------------------"


## other options
#CD open!eject
#CD close!eject -t
#Gedit !gedit
#VLC Player !vlc
