#! /bin/bash


			RC='\e[0;31m' # Red Color
			NC='\e[0m' # No Color

			funcError()
				{
					# zenity --error --text "$1" ; exit 1
					echo "$1"
					yad --image=dialog-warning \
						--text="<b><span color='red'>$1</span></b>" \
						--button="<b><span color='blue'>OK</span></b>" \
						--title="Fu Reader"
					exit 1
				}


# Check Dependecies
[[ $(echo $SHELL) == "/bin/bash" ]] || { echo "${RC} Error: FUUUUUUU  \$SHELL=/bin/bash. ${NC}" ; exit 1 ;}
[[ -z $(which yad) ]] && { echo "${RC} Error: FUUUUUUUUU  yad. ${NC}" ; exit 1 ;}
[[ -z $(which awk) ]] && funcError " Error: \n FUUUUUUUUU  awk. "
[[ -z $(which gtkdialog) ]] && funcError "Error: \n FUUUUUUUUU  gtkdialog. "
[[ -z $(which curl) ]] && funcError " Error: \n FUUUUUUUUU  curl. "
[[ -z $(which xdg-open) ]] && funcError " Error: \n FUUUUUUUUU  xdg-open. "
[[ -z $(which notify-send) ]] && funcError " Error: \n FUUUUUUUUU  notify-send. "



# Menu in tray icon
echo "-----------------------------"
yad  --title="Test_window" --notification  --listen \
--menu="Check News!data/check_news
Manager!data/manager
Exit !data/kill_yd "Test_window"" \
--separator="\\n" \
 --command='echo Where are the river without water? -On the maps.' --image=data/icons/cool-smilies.png  --button="gtk-close:1"
echo "-----------------------------"


## other options
#CD open!eject
#CD close!eject -t
#Gedit !gedit
#VLC Player !vlc
